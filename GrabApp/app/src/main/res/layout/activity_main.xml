<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">
        <ImageButton
            android:layout_centerVertical="true"
            android:id="@+id/back_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/back_button" />

        <ImageButton
            android:layout_centerVertical="true"
            android:id="@+id/favorite_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@id/history_button"
            android:background="@drawable/fav_icon" />

        <ImageButton
            android:id="@+id/history_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/history_icon" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/round_background"
        android:paddingHorizontal="10dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/search_icon" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="@color/white"
            android:hint="Kamu lagi mau makan apa nih?"
            android:textColor="@color/black"
            android:textSize="13sp" />
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginVertical="20dp"
        android:fadeScrollbars="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="500dp">

            <ImageView
                android:layout_width="410dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/banner1" />

            <ImageView
                android:src="@drawable/banner1"
                android:layout_width="410dp"
                android:layout_height="match_parent" />

            <ImageView
                android:src="@drawable/banner1"
                android:layout_width="410dp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </HorizontalScrollView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp"
            >
            <LinearLayout
                android:layout_marginVertical="10dp"
                android:id="@+id/menu1"
                android:orientation="vertical"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:clickable="true"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:srcCompat="@drawable/pizza1" />
                <TextView
                    android:id="@+id/title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pizza Hits"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/menu2"
                android:layout_marginVertical="10dp"
                android:layout_alignParentEnd="true"
                android:orientation="vertical"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:clickable="true"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:srcCompat="@drawable/pizza1" />
                <TextView
                    android:id="@+id/title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pizza Hits"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/menu3"
                android:layout_marginVertical="10dp"
                android:layout_below="@+id/menu1"
                android:orientation="vertical"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:clickable="true"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:srcCompat="@drawable/pizza1" />
                <TextView
                    android:id="@+id/title3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pizza Hits"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/menu4"
                android:layout_alignParentEnd="true"
                android:layout_marginVertical="10dp"
                android:layout_below="@+id/menu2"
                android:orientation="vertical"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:clickable="true"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:srcCompat="@drawable/pizza1" />
                <TextView
                    android:id="@+id/title4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pizza Hits"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/menu3"
                android:layout_marginVertical="10dp"
                android:id="@+id/menu5"
                android:orientation="vertical"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:clickable="true"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:srcCompat="@drawable/pizza1" />
                <TextView
                    android:id="@+id/title5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pizza Hits"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/menu4"
                android:layout_marginVertical="10dp"
                android:id="@+id/menu6"
                android:orientation="vertical"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:clickable="true"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:srcCompat="@drawable/pizza1" />
                <TextView
                    android:id="@+id/title6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pizza Hits"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>