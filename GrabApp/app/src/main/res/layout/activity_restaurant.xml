<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/pizza1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pizza Hits"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_marginHorizontal="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pizza"
                android:layout_marginHorizontal="15dp"
                />
            <LinearLayout
                android:layout_marginHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.8"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.1km"
                    android:layout_marginHorizontal="20dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="15dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rekomendasi Untukmu"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:layout_marginVertical="10dp"
                        android:id="@+id/menu1"
                        android:orientation="vertical"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:clickable="true"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:src="@drawable/pizza1" />
                        <TextView
                            android:id="@+id/title1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pizza 1"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/menu2"
                        android:layout_marginVertical="10dp"
                        android:layout_alignParentEnd="true"
                        android:orientation="vertical"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:clickable="true"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:src="@drawable/spicypizza" />
                        <TextView
                            android:id="@+id/title2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pizza 2"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/menu3"
                        android:layout_marginVertical="10dp"
                        android:layout_below="@+id/menu1"
                        android:orientation="vertical"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:clickable="true"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:src="@drawable/spicypizza" />
                        <TextView
                            android:id="@+id/title3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pizza 3"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/menu4"
                        android:layout_alignParentEnd="true"
                        android:layout_marginVertical="10dp"
                        android:layout_below="@+id/menu2"
                        android:orientation="vertical"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:clickable="true"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:src="@drawable/pizza1" />
                        <TextView
                            android:id="@+id/title4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pizza 4"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">
        <ImageButton
            android:layout_centerVertical="true"
            android:id="@+id/back_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/back_button" />
        <ImageButton
            android:textAlignment="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@drawable/search_icon"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>
</RelativeLayout>